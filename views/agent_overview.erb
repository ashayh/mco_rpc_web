<H1><%= params[:agent].capitalize %> Agent <small><%= @ddl.meta[:description] %></small></H1>

<br />

<H3>Agent Metadata</H3>
<br />
<dl class="dl-horizontal">
  <dt>Author:</dt><dd><%= @ddl.meta[:author] %></dd>
  <dt>Version</dt><dd><%= @ddl.meta[:version] %></dd>
  <dt>License</dt><dd><%= @ddl.meta[:license] %></dd>
  <dt>Timeout</dt><dd><%= @ddl.meta[:timeout] %></dd>
  <dt>Homepage</dt><dd><a href="<%= @ddl.meta[:url] %>"><%= @ddl.meta[:url] %></a></dd>
</dl>

<H3>Actions</H3>
<table class="table table-condensed table-striped table-bordered table-sorted">
  <thead>
    <th>Action</th>
    <th>Description</th>
  </thead>
  <tbody>
    <% @ddl.actions.sort.each do |action| %>
      <tr><td><a href="/agent/<%= @agent %>/action/<%= action %>"><%= action %></a></td><td><%= @ddl.action_interface(action)[:description] %></td></tr>
    <% end %>
  </tbody>
</table>
